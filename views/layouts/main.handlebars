<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link
      rel='stylesheet'
      href='../../stylesheets/styles.css'
      type='text/css'
    />
    <title>Tech Blog</title>
  </head>
  <body>
    <div class='wrapper'>
      <header>
        <h1 id='header-logo'>The Tech Blog</h1>
        <nav>
          <a class='navItem' href='/'>Home</a>
          <a class='navItem' href='/dashboard'>Dashboard</a>
          {{#if loggedIn}}
            <a class='navItem' id='logout'>Logout</a>
          {{else}}
            <a class='navItem' href='/login'>Login</a>
          {{/if}}
        </nav>
        {{! Empty element to be used in tandem with space-between to fill in required space }}
        <div id='empty'>
          {{#if username}}
            <p style='color: white;'><span style='font-size: 18px'>Logged in as</span>
              <em style='font-weight: 800'>{{username}}</em></p>
          {{/if}}
        </div>
      </header>
      <main>
        {{{body}}}
      </main>
    </div>
  </body>
</html>
<script src='/javascript/main.js'></script>
{{#if loggedIn}}
  <script src='/javascript/logout.js'></script>
{{/if}}