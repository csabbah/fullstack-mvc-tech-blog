<div id='homepage-posts'>
  {{#each posts as |post|}}
    <a id='single-post' href='/post/{{post.id}}'>
      <div id='post-header'>
        <p id='post-title'>{{post.title}}</p>
        <p id='post-date'>Posted by
          <em>{{post.user.username}}</em>
          on
          {{format_date post.created_at}}</p>
      </div>
      <div id='chat-icon-wrapper'>
        <img id='chat-icon' src='./images/comment.png' alt='' />
        {{commentLengths post.comments}}
      </div>
      <p id='post-body'>
        {{post.description}}
      </p>
    </a>
  {{/each}}
</div>