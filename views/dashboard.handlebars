<div class='addPost-container'>
  <h1>Add Post</h1>
  <form id='addPost-form'>
    <input type='text' id='add-post-title' placeholder='Post Title' />
    <textarea
      type='text'
      id='add-post-desc'
      placeholder='Post description'
    ></textarea>
    <button id='add-post' type='submit'>Post</button>
  </form>
</div>
<hr id='dashboardHr' />
<h1 id='your-posts'>Your posts</h1>
<div id='dashboard-posts'>
  {{#each posts as |post|}}
    <div id='single-post'>
      <div id='post-header'>
        <h1 id='post-title'>{{post.title}}</h1>
        <p id='post-date'>{{format_date post.date}}</p>
      </div>
      <p id='post-body'>
        {{post.description}}
      </p>
      <div id='post-controls'>
        <button id='edit-post'>Edit post</button>
        <button data-post-id={{post.postId}} id='delete-post'>Delete post</button>
      </div>
    </div>
  {{/each}}
</div>
<script src='/javascript/add-post.js'></script>